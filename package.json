{
  "name": "mydiary",
  "version": "1.0.0",
  "description": "mydairy is an online journal where users can pen down their thoughts and feelings",
  "main": "app.js",
  "scripts": {
    "test:local": "cross-env NODE_ENV=test npm run test:setup && npm run test && npm run test:pulldown",
    "test:setup": "psql -U andela -d mydiarytest -f server/config/tests/setup.sql",
    "test:pulldown": "psql -U andela -d mydiarytest -f server/config/tests/pulldown.sql",
    "test:dev": "npm run db && npm test",
    "test": "cross-env NODE_ENV=test nyc mocha --require babel-register --timeout 6000 ./server/test/**/**.js --exit",
    "clean": "del -rf build && mkdir build",
    "build-babel": "babel -d ./build ./src -s",
    "build:dev": "npm run clean && npm run build-babel",
    "build": "babel server --out-dir dist/ --ignore server/test",
    "start:dev": "npm run build && node ./build/app.js",
    "lint:js": "eslint --fix server/**/*.js",
    "db": "babel-node server/migrations/index.js",
    "start": "nodemon --exec babel-node --presets env server/app.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EphraimDev/MyDiary.git"
  },
  "author": "Ephraim Aigbefo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EphraimDev/MyDiary/issues"
  },
  "homepage": "https://github.com/EphraimDev/MyDiary#readme",
  "dependencies": {
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "cross-env": "^5.2.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "mocha": "^5.2.0",
    "moment": "^2.22.2",
    "morgan": "^1.9.0",
    "nodemailer": "^4.6.7",
    "npm-run-all": "^4.1.3",
    "nyc": "^12.0.2",
    "pg": "^7.4.3",
    "random-string": "^0.2.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-babel": "^1.2.3",
    "babel-cli": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-env": "^1.7.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.1.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.0",
    "eslint-plugin-react": "^7.10.0",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.5.5",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.17.5"
  }
}
